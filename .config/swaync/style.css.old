**─────────────────────────────(PRESETS)───*/
@define-color black   rgba(0,0,0,0.8);
@define-color white   rgba(255,255,255,0.8);
@define-color red     rgba(255,0,0,0.8);
@define-color blue    rgba(0,255,0,0.8);
@define-color green   rgba(0,0,255,0.8);
@define-color purple  rgba(255,0,255,0.8);
@define-color grey    rgba(125,125,125,0.8);

/*──────────────────────────(EVERYTHING)───*/
* {
    font-family: Roboto;
}

/*──────────────────────────────(SWAYNC)───*/
/*─────────────────────────────(MODULES)───*/
/*─────────────────────────(AUTOMATIONS)───*/
.notification-row {
    outline: none;
}

.notification-row:focus,
.notification-row:hover {
    background: @noti-bg-focus;
}

.notification {
    border-radius: 0;
    margin: 6px 12px;
    box-shadow:
        0 0 0 1px rgba(0, 0, 0, 0.3),
        0 1px 3px 1px rgba(0, 0, 0, 0.7),
        0 2px 6px 2px rgba(0, 0, 0, 0.3);
    padding: 0;
}

